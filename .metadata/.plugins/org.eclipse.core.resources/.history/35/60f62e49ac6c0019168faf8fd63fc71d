package com.leetcode.methold;

import java.util.ArrayList;

public class Reverse {

	public int reverse(int x) {
		/*
		 * x分2类：1.正常    2.负数 
		 */
		ArrayList<Integer> nums = new ArrayList<>();
		int n;
		int res = 0;
		if (x >= 0) {
			while(x < 10){
				n = x % 10; //余数
				x /= 10;
				nums.add(n);
			}
			nums.add(x);
		}
		for(int i = 0; i < nums.size(); i++){
			res += nums.get(i)*(10^i);
		}
		return res;
	}

}
